program Ejercicio4;

uses crt;
var
	numero:integer;
	resultado:boolean;
	
function verificarpositivo(n:integer):boolean;
begin
	if (n>0) then
	begin
		verificarpositivo:=true;
	end
	else
	begin
		verificarpositivo:=false;
	end;
end;	

BEGIN
	clrscr;
	Writeln ('Ingrese el numero que desea verificar o 0 para salir');
	Readln (numero);
	While (numero <> 0) do
	begin
		resultado:=verificarpositivo(numero);
		Writeln (resultado);
		Writeln ('Ingrese el numero que desea verificar o 0 para salir');
		Readln (numero);
	end;	
END.

